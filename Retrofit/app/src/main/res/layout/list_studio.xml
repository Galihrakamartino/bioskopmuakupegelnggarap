<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgStudio"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/tvIdStudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgStudio"
            android:layout_below="@id/tvIdStudio"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgStudio"
            android:hint="Id Studio"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvStudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdStudio"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgStudio"
            android:hint="Studio :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTempatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStudio"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgStudio"
            android:hint="Contoh Studio Deluxe 3 "
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>


</LinearLayout>